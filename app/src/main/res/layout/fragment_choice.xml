<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ChoiceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#9FDAF1BF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/choice_fragment"
            android:textSize="25sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextChoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="insert text"
                android:textSize="25sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/buttonChoiceFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go to main Fragment"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>