<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="#61A6E7F0">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_fragment"
            android:textSize="25sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textViewMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="show text"
                android:textSize="25sp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/buttonMainFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="go to main Fragment"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/buttonMainFragmentToRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="go to RV Fragment"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>